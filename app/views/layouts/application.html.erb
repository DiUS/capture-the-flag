<!DOCTYPE html>
<html>
<head>
  <title>Capture The Flag</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a data-target=".navbar-responsive-collapse" data-toggle="collapse" class="btn btn-navbar"></a>
            <a href="#" class="brand">Capture The Flag</a>
            <div class="nav-collapse collapse navbar-responsive-collapse">
              <ul class="nav">
                <li class="active">
                  <%= link_to "Home", root_url %>
                </li>
                <li class="active">
                  <%= link_to "Levels", levels_path %>
                </li>
                <li class="active">
                  <%= link_to "Games", games_path %>
                </li>
              </ul>
              <% if user_signed_in? %>
                <ul class="nav pull-right navbar-right">
                  <li><%= link_to current_user.email, "/users/edit" %></li>
                  <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>

      </div>
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>

